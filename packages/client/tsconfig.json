{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
    }
}